$bg-danger = rgb(221, 83, 66)
$bg-primary = rgb(62, 91, 150)
$bg-red = #e62b1e
$font-default =  Arial, Helvetica, sans-serif

* 
  -webkit-box-sizing: border-box
  box-sizing: border-box

a 
  color: black
  font-weight: bold

label 
  cursor: pointer

body 
  font-family: $font-default 
  background: #e8e8e8

.popup 
  max-width: 840px
  border-top: 2px solid $bg-red
  background: #fff
  margin: 30px auto
  -webkit-box-shadow: 0px 2px 1.8px 0.2px rgba(0, 0, 0, 0.25)
  box-shadow: 0px 2px 1.8px 0.2px rgba(0, 0, 0, 0.25)
  &__header 
    position: relative
  &__close 
    position: absolute
    top: 14px
    right: 16px
    width: 15px
    height: 15px
    font-size: 0
    background: #fff0
    border: none
    cursor: pointer
    &:before,
    &:after 
        position: absolute
        top: 0
        content: " "
        height: 15px
        width: 2px
        background-color: #c2c2c2
    &:before 
        transform: rotate(45deg)
    &:after 
        transform: rotate(-45deg)
  &__header-text 
    font-size: 31px
    font-weight: bold
    text-align: center
    padding-top: 25px
    padding-bottom: 25px
  &__body 
    display: flex
    background-color: rgb(243, 243, 243)
    padding-top: 40px
    padding-bottom: 41px

.col-1-of-2 
  width: 50%
  padding-left: 59px
  padding-right: 59px

.bordered 
  border-right: 1px solid rgba(0, 0, 0, 0.149)

.button 
  position: relative
  padding-top: 10px
  padding-bottom: 13px
  border: none
  color: white
  font-size: 14px
  font-weight: bold
  border-radius: 3px
  background-color: rgb(37, 37, 37)
  width: 103px
  cursor: pointer
  &:hover 
    background-color: rgb(102, 102, 102)

.button--fb 
  margin-bottom: 21px
  padding-left: 34px
  background-color: $bg-primary
  width: 300px
  &:hover 
    background-color: rgb(49, 72, 119)
  &::before 
    position: absolute
    top: 10px
    left: 15px
    content: ""
    height: 22px
    width: 10px
    background: url("../img/fb.png") no-repeat

.button--gp 
  background-color: $bg-danger
  padding-left: 36px
  width: 300px
  &:hover 
    background-color: rgb(172, 64, 51)
  &::before 
    position: absolute
    top: 10px
    left: 15px
    content: ""
    height: 22px
    width: 25px
    background: url("../img/gp.png") no-repeat

.form-field 
  font-size: 14px
  font-weight: bold
  margin-bottom: 23px
  &:last-child 
    display: flex
    justify-content: space-between
    align-items: center
    margin: 0

.checkbox__theme 
  display: inline-block
  width: 12px
  height: 12px
  border-radius: 2px
  margin-right: 3px
  background-color: #3b99fc
  
.checkbox input:checked + .checkbox__theme 
  background-image: url("../img/checked.svg")
  background-repeat: no-repeat
  background-position: center center

[type="text"],[type="email"],
[type="password"] 
  border-radius: 3px
  border: 1px solid rgb(221, 221, 221)
  display: block
  height: 38px
  width: 100%
  margin-top: 8px
  padding-left: 10px

#js-greeting__close
  display: none

[type="checkbox"] 
  display: none

.popup__footer 
  padding-top: 31px
  padding-bottom: 35px
  text-align: center
  font-size: 18px
  color: rgb(102, 102, 102)



